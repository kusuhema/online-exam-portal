<% layout("/layouts/boilerplate.ejs") %>  
 


<div class="main_login">
  <div class="main_login1">
      <img src="/images/Sign up-rafiki.png" alt="">
  </div>
  <div class="main_login2">
      <div class="login">
          <h2>Signup</h2>
          <p id="detail">Hey enter your details to create your account</p>
          <form action="/signup" method="post" class="needs-validation app" novalidate >
              <div class="mb-3 login-username">
                <label for="username" class="form-label"> </label>
                <i class="fa-solid fa-user"></i>
                <input name="username" type="text" placeholder="Enter your username" class="form-control" id="username" required>
              </div>
              <div class="mb-3 signup-email input-email">
                <label for="email" class="form-label"></label>
                <i class="fa-solid fa-envelope"></i>
                <input name="email" type="email" placeholder="Enter your email address" class="form-control" id="email" required>
              </div>
              <div class="mb-3 login-password">
                  <label for="password" class="form-label"></label>
                  <i class="fa-solid fa-lock"></i>
                  <input name="password" type="password" placeholder="Enter your Password" class="form-control" id="password" >
              </div>
              <button class="login_btn">sign up</button>
          </form>

          <p class="login_sign">Already have an account? <a href="/login">Sign in</a></p> 
      </div>
  </div>
</div>

